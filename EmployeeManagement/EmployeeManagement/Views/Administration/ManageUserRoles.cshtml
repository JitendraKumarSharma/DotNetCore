@model List<UserRolesViewModel>
@{
    ViewData["Title"] = "Manage User Role";
    var userId = ViewBag.userId;
}

<form method="post">
    <div class="card">
        <div class="card-header">
            <h3>Manage User Roles</h3>
        </div>
        <div class="card-body">
            @if (Model != null && Model.Any())
            {
                for (int i = 0; i < Model.Count; i++)
                {
                    <div class="form-check m-1">
                        <input type="hidden" asp-for="@Model[i].RoleId" />
                        <input type="hidden" asp-for="@Model[i].RoleName" />
                        <input asp-for="@Model[i].IsSelected" class="form-check-input" />
                        <label style="margin-left:20px" class="form-check-label" asp-for="@Model[i].IsSelected">
                            @Model[i].RoleName
                        </label>
                    </div>
                }
                @*foreach (var user in Model)
                {
                    <div class="form-check m-1">
                        <input type="hidden" asp-for="@user.RoleId" />
                        <input type="hidden" asp-for="@user.RoleName" />
                        <input asp-for="@user.IsSelected" class="form-check-input" />
                        <label style="margin-left:20px" class="form-check-label" asp-for="@user.IsSelected">
                            @user.RoleName
                        </label>
                    </div>
                }*@
            }
            else
            {
                <h5 class="card-title">None at the moment</h5>
            }
            <div asp-validation-summary="All" class="text-danger"></div>
        </div>
        <div class="card-footer">
            <input type="submit" value="Update" class="btn btn-primary" />
            <a asp-action="EditUser" asp-route-id="@userId" class="btn btn-primary">Cancel</a>
        </div>
    </div>
</form>